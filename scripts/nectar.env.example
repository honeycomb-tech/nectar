# Nectar Environment Configuration for systemd
# Copy to /etc/nectar/nectar.env and update values

# Required: Database Configuration
TIDB_DSN=user:password@tcp(localhost:4000)/nectar?charset=utf8mb4&parseTime=True&loc=Local&timeout=300s&readTimeout=300s&writeTimeout=300s&maxAllowedPacket=67108864&autocommit=true&tx_isolation='READ-COMMITTED'

# Cardano Network Configuration
CARDANO_NODE_SOCKET=/opt/cardano/cnode/sockets/node.socket
CARDANO_NETWORK_MAGIC=764824073

# Performance Tuning
DB_CONNECTION_POOL=8
WORKER_COUNT=8
BULK_MODE_ENABLED=false
BULK_FETCH_RANGE_SIZE=2000
STATS_INTERVAL=3s
BLOCKFETCH_TIMEOUT=30s

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
DEBUG_MODE=false
LOG_LEVEL=info

# Reward Parameters (Mainnet defaults)
CARDANO_TREASURY_TAX=0.20
CARDANO_MONETARY_EXPANSION=0.003
CARDANO_OPTIMAL_POOL_COUNT=500